<table class="stat-table">
    <tr><td>WikiText line count</td><td>{{line_count}}</td></tr>
    <tr><td>Number of images embedded</td><td>{{image_count}}</td></tr>
    {{#if template_count~}}
    <tr><td>Template usage</td><td>
        <ul>
            {{#each template_count~}}
            <li>{{@key}}: {{this}}</li>
            {{/each~}}
        </ul>
    </td></tr>
    {{/if~}}
    <tr><td>Number of lints</td><td>{{lints_total}}</td></tr>
    {{#if severity~}}
    <tr><td>Number of lints (by severity)</td><td>
        <ul>
            {{#each severity~}}
            <li>{{@key}}: {{this}}</li>
            {{/each~}}
        </ul>
    </td></tr>
    {{/if~}}
    {{#if kind~}}
    <tr><td>Number of lints (by kind)</td><td>
        <ul>
            {{#each kind~}}
            <li>{{@key}}: {{this}}</li>
            {{/each~}}
        </ul>
    </td></tr>
    {{/if~}}
    {{#if unresolved_references~}}
    <tr><td>Unresolved references</td><td>
        <ul>
            {{#each unresolved_references~}}
            <li>{{this}}</li>
            {{/each~}}
        </ul>
    </td></tr>
    {{/if~}}
    {{#if reference_targets~}}
    <tr><td>This article references</td><td>
        <ul>
            {{#each reference_targets~}}
            <li>{{this}}</li>
            {{/each~}}
        </ul>
    </td></tr>
    {{/if~}}
</table>
